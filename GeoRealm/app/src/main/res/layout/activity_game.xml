<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/layout_info"
        android:background="@drawable/bot_rounded_rec_trans"
        android:padding="10dp">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/button_quit"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_quit"
            android:tint="@color/colorBase"
            android:tintMode="src_atop"
            android:scaleX="1.25"
            android:scaleY="1.25"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_quit"
            android:text="@string/quit"
            android:textColor="@color/colorBase"
            android:layout_toEndOf="@id/button_quit"
            android:layout_alignBottom="@id/button_quit"
            android:textStyle="italic|bold"
            android:textSize="12sp"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/button_menu"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_menu"
            android:tint="@color/colorBase"
            android:tintMode="src_atop"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_menu"
            android:text="@string/menu"
            android:textColor="@color/colorBase"
            android:layout_toStartOf="@id/button_menu"
            android:layout_alignBottom="@id/button_menu"
            android:textStyle="italic|bold"
            android:textSize="12sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_character"
                android:src="@drawable/ic_sword"
                android:tint="@color/colorBase"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_character"
                android:layout_toEndOf="@id/image_character"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:text="milovan, 1"
                android:textStyle="italic|bold"
                android:textColor="@color/colorBase"/>

        </RelativeLayout>

    </RelativeLayout>

    <!-- MENU ITEMS -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_menu"
        android:background="@drawable/menu_gradient"
        android:layout_marginTop="60dp"
        android:layout_gravity="end"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBase"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="end">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button_character"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_character"
                android:tint="@color/colorBase"
                android:tintMode="src_atop"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_character"
                android:textColor="@color/colorBase"
                android:layout_toStartOf="@id/button_character"
                android:layout_alignBottom="@id/button_character"
                android:textStyle="italic|bold"
                android:textSize="16sp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBase"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <RelativeLayout
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="end">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button_change_character"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_change"
                android:tint="@color/colorBase"
                android:tintMode="src_atop"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_character"
                android:textColor="@color/colorBase"
                android:layout_toStartOf="@id/button_change_character"
                android:layout_alignBottom="@id/button_change_character"
                android:textStyle="italic|bold"
                android:textSize="16sp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBase"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="end">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/button_highscore"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_highscore"
            android:tint="@color/colorBase"
            android:tintMode="src_atop"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/highscore"
            android:textColor="@color/colorBase"
            android:layout_toStartOf="@id/button_highscore"
            android:layout_alignBottom="@id/button_highscore"
            android:textStyle="italic|bold"
            android:textSize="16sp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBase"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="end">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/button_instructions"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_instructions"
                android:tint="@color/colorBase"
                android:tintMode="src_atop"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instructions"
                android:textColor="@color/colorBase"
                android:layout_toStartOf="@id/button_instructions"
                android:layout_alignBottom="@id/button_instructions"
                android:textStyle="italic|bold"
                android:textSize="16sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:id="@+id/geo_realm_label"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geo"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:fontFamily="monospace"
                android:layout_marginStart="2dp"
                android:layout_marginTop="1dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/geo_label"
                android:text="Geo"
                android:textColor="@color/colorBase"
                android:textSize="25sp"
                android:fontFamily="monospace"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Realm"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="35sp"
                android:fontFamily="casual"
                android:layout_toEndOf="@+id/geo_label"
                android:layout_marginStart="2dp"
                android:layout_marginTop="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Realm"
                android:textColor="@color/colorBase"
                android:textSize="35sp"
                android:fontFamily="casual"
                android:layout_toEndOf="@+id/geo_label" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
