<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_shop_buy"
    android:layout_marginTop="65dp"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/potions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="35dp"
        android:paddingEnd="35dp"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:id="@+id/health_buy">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5"/>

            <ImageView
                android:id="@+id/health_pot_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_gem"
                android:tint="@color/colorHealth"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/health_pots_name"
                android:text="@string/health_potion"
                android:textSize="18sp"
                android:textStyle="italic|bold"
                android:textColor="@color/colorHealth"
                app:layout_constraintBottom_toTopOf="@id/guideline_health"
                app:layout_constraintLeft_toRightOf="@+id/health_pot_icon"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/health_pots_desc"
                android:text="@string/health_potion_desc"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@color/colorHealth"
                app:layout_constraintTop_toBottomOf="@id/guideline_health"
                app:layout_constraintLeft_toRightOf="@+id/health_pot_icon"
                android:layout_marginStart="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:id="@+id/mana_buy">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_mana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5"/>

            <ImageView
                android:id="@+id/mana_pot_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_gem"
                android:tint="@color/colorMana"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mana_pots_name"
                android:text="@string/mana_potion"
                android:textSize="18sp"
                android:textStyle="italic|bold"
                android:textColor="@color/colorMana"
                app:layout_constraintBottom_toTopOf="@id/guideline_mana"
                app:layout_constraintLeft_toRightOf="@+id/mana_pot_icon"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mana_pots_desc"
                android:text="@string/mana_potion_desc"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@color/colorMana"
                app:layout_constraintTop_toBottomOf="@id/guideline_mana"
                app:layout_constraintLeft_toRightOf="@+id/mana_pot_icon"
                android:layout_marginStart="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stamina_buy">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_stamina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5"/>

            <ImageView
                android:id="@+id/stamina_pot_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_gem"
                android:tint="@color/colorStamina"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stamina_pots_name"
                android:text="@string/stamina_potion"
                android:textSize="18sp"
                android:textStyle="italic|bold"
                android:textColor="@color/colorStamina"
                app:layout_constraintBottom_toTopOf="@id/guideline_stamina"
                app:layout_constraintLeft_toRightOf="@+id/stamina_pot_icon"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stamina_pots_desc"
                android:text="@string/stamina_potion_desc"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@color/colorStamina"
                app:layout_constraintTop_toBottomOf="@id/guideline_stamina"
                app:layout_constraintLeft_toRightOf="@+id/stamina_pot_icon"
                android:layout_marginStart="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/label_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/items"
        android:textStyle="italic|bold"
        android:textSize="22sp"
        android:textColor="@color/colorDisabled"
        app:layout_constraintTop_toBottomOf="@+id/potions"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="35dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDisabled"
        android:layout_marginStart="35dp"
        app:layout_constraintTop_toBottomOf="@+id/label_items"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/buy_item_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buy_amount_slider"
        app:layout_constraintTop_toBottomOf="@+id/label_items"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp">

    </androidx.recyclerview.widget.RecyclerView>

    <SeekBar
        android:id="@+id/buy_amount_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/num_to_buy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/num_to_buy"
        app:layout_constraintRight_toLeftOf="@+id/num_to_buy"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:max="0" />

    <TextView
        android:id="@+id/num_to_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="italic|bold"
        android:textSize="22sp"
        android:textColor="@color/colorBase"
        app:layout_constraintBottom_toTopOf="@+id/button_buy"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_buy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/buy_cost"
        android:textColor="@color/colorBase"
        android:textStyle="italic"
        android:background="@drawable/top_rounded_rec_disabled"
        android:layout_weight="1" />

</androidx.constraintlayout.widget.ConstraintLayout>
